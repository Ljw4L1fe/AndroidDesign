<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePwdActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/changepwd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_background"
        android:theme="@style/ToolbarMenuTheme"
        app:navigationIcon="@drawable/ic_outline_arrow_back_ios_24"
        app:title=" "
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/changepwd_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/orginpwd"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="4dp"
        android:text="原密码"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="SmallSp" />

    <EditText
        android:id="@+id/et_orginpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="25dp"
        android:inputType="text"
        android:maxLines="1" />

    <TextView
        android:id="@+id/cnewpwd"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="4dp"
        android:text="新密码"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="SmallSp" />

    <EditText
        android:id="@+id/et_cnewpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="25dp"
        android:inputType="textPassword"
        android:maxLines="1" />

    <TextView
        android:id="@+id/cconnewpwd"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="4dp"
        android:text="确认新密码"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="SmallSp" />

    <EditText
        android:id="@+id/et_cconnewpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="1dp"
        android:inputType="textPassword"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center">

        <Button
            android:id="@+id/bt_changepwd"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_selector"
            android:text="确认修改"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>